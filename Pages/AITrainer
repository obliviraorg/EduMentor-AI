import React, { useState, useEffect, useRef } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { motion, AnimatePresence } from 'framer-motion';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Send, Brain, Loader2, Lightbulb, BookOpen } from 'lucide-react';
import HolographicOrb from '../components/3d/HolographicOrb';

export default function AITrainer() {
  const queryClient = useQueryClient();
  const [user, setUser] = useState(null);
  const [message, setMessage] = useState('');
  const [chatSession, setChatSession] = useState(null);
  const [sending, setSending] = useState(false);
  const messagesEndRef = useRef(null);

  useEffect(() => {
    loadUser();
    initChatSession();
  }, []);

  useEffect(() => {
    scrollToBottom();
  }, [chatSession]);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  };

  const loadUser = async () => {
    try {
      const currentUser = await base44.auth.me();
      setUser(currentUser);
    } catch (error) {
      base44.auth.redirectToLogin();
    }
  };

  const initChatSession = async () => {
    try {
      const sessions = await base44.entities.AIChat.filter({ 
        user_id: (await base44.auth.me()).id,
        session_active: true
      }, '-created_date', 1);

      if (sessions.length > 0) {
        setChatSession(sessions[0]);
      } else {
        const newSession = await base44.entities.AIChat.create({
          user_id: (await base44.auth.me()).id,
          conversation_history: [],
          suggested_tasks: []
        });
        setChatSession(newSession);
      }
    } catch (error) {
      console.error("Failed to init chat session:", error);
    }
  };

  const sendMessageMutation = useMutation({
    mutationFn: async (userMessage) => {
      setSending(true);

      // Add user message to history
      const updatedHistory = [
        ...(chatSession.conversation_history || []),
        {
          role: 'user',
          content: userMessage,
          timestamp: new Date().toISOString()
        }
      ];

      // Get AI response
      const aiResponse = await base44.integrations.Core.InvokeLLM({
        prompt: `You are an advanced AI learning mentor called "EduMentor AI Trainer". You help students learn faster and remember better.

Context: The student is using an AI-powered learning platform with courses, smartnotes, and flashcards.

Conversation history:
${updatedHistory.slice(-5).map(msg => `${msg.role}: ${msg.content}`).join('\n')}

Respond to the student's latest message with:
1. A helpful, encouraging answer
2. 2-3 actionable follow-up suggestions

Be concise, practical, and motivational. Use Socratic questioning when appropriate.`,
        response_json_schema: {
          type: "object",
          properties: {
            response: { type: "string" },
            suggested_tasks: {
              type: "array",
              items: { type: "string" }
            }
          }
        }
      });

      // Add AI response to history
      updatedHistory.push({
        role: 'assistant',
        content: aiResponse.response,
        timestamp: new Date().toISOString()
      });

      // Update chat session
      const updated = await base44.entities.AIChat.update(chatSession.id, {
        conversation_history: updatedHistory,
        suggested_tasks: aiResponse.suggested_tasks || []
      });

      return updated;
    },
    onSuccess: (updated) => {
      setChatSession(updated);
      setMessage('');
      setSending(false);
    },
    onError: (error) => {
      setSending(false);
      alert(error.message || "Failed to send message");
    }
  });

  const handleSend = () => {
    if (message.trim() && !sending) {
      sendMessageMutation.mutate(message.trim());
    }
  };

  const quickPrompts = [
    "Explain neural networks in simple terms",
    "Create a study plan for machine learning",
    "Help me understand recursion",
    "What's the best way to memorize algorithms?"
  ];

  return (
    <div className="min-h-screen bg-gradient-to-b from-[#0A0E27] to-[#050810] p-4 md:p-8">
      <div className="max-w-6xl mx-auto">
        <motion.div
          initial={{ opacity: 0, y: -20 }}
          animate={{ opacity: 1, y: 0 }}
          className="text-center mb-8"
        >
          <div className="flex justify-center mb-4">
            <HolographicOrb width={200} height={200} />
          </div>
          <h1 className="text-4xl md:text-5xl font-bold text-white mb-2">
            <span className="text-transparent bg-clip-text bg-gradient-to-r from-[#00E6FF] to-[#8A2BE2]">
              AI Trainer
            </span>
          </h1>
          <p className="text-gray-400">Your holographic learning mentor, powered by neural synthesis</p>
        </motion.div>

        <div className="grid lg:grid-cols-3 gap-6">
          {/* Chat Area */}
          <div className="lg:col-span-2">
            <Card className="glassmorphism border-white/10 h-[600px] flex flex-col">
              <CardHeader className="border-b border-white/10">
                <CardTitle className="text-white flex items-center gap-2">
                  <Brain className="w-5 h-5 text-[#00E6FF]" />
                  Conversation
                </CardTitle>
              </CardHeader>
              
              <CardContent className="flex-1 overflow-y-auto p-6 space-y-4">
                <AnimatePresence>
                  {chatSession?.conversation_history?.length === 0 && (
                    <motion.div
                      initial={{ opacity: 0 }}
                      animate={{ opacity: 1 }}
                      className="text-center py-12"
                    >
                      <Brain className="w-16 h-16 text-[#00E6FF] mx-auto mb-4 opacity-50" />
                      <h3 className="text-xl font-bold text-white mb-2">Start a conversation</h3>
                      <p className="text-gray-400 mb-6">Ask me anything about learning, courses, or study strategies</p>
                      
                      <div className="grid grid-cols-2 gap-3 max-w-md mx-auto">
                        {quickPrompts.map((prompt, idx) => (
                          <Button
                            key={idx}
                            variant="outline"
                            className="border-[#00E6FF]/30 text-[#00E6FF] hover:bg-[#00E6FF]/10 text-sm"
                            onClick={() => setMessage(prompt)}
                          >
                            {prompt}
                          </Button>
                        ))}
                      </div>
                    </motion.div>
                  )}

                  {chatSession?.conversation_history?.map((msg, idx) => (
                    <motion.div
                      key={idx}
                      initial={{ opacity: 0, y: 10 }}
                      animate={{ opacity: 1, y: 0 }}
                      className={`flex ${msg.role === 'user' ? 'justify-end' : 'justify-start'}`}
                    >
                      <div
                        className={`max-w-[80%] p-4 rounded-2xl ${
                          msg.role === 'user'
                            ? 'bg-gradient-to-r from-[#00E6FF] to-[#8A2BE2] text-white'
                            : 'glassmorphism border border-white/10 text-gray-200'
                        }`}
                      >
                        <p className="text-sm whitespace-pre-wrap">{msg.content}</p>
                        <p className="text-xs opacity-60 mt-2">
                          {new Date(msg.timestamp).toLocaleTimeString()}
                        </p>
                      </div>
                    </motion.div>
                  ))}
                </AnimatePresence>
                
                <div ref={messagesEndRef} />
              </CardContent>

              <div className="p-4 border-t border-white/10">
                <div className="flex gap-2">
                  <Input
                    value={message}
                    onChange={(e) => setMessage(e.target.value)}
                    onKeyPress={(e) => e.key === 'Enter' && handleSend()}
                    placeholder="Ask your AI trainer anything..."
                    className="bg-white/5 border-white/10 text-white placeholder:text-gray-500"
                    disabled={sending}
                  />
                  <Button
                    onClick={handleSend}
                    disabled={!message.trim() || sending}
                    className="bg-gradient-to-r from-[#00E6FF] to-[#8A2BE2] hover:from-[#00E6FF]/90 hover:to-[#8A2BE2]/90"
                  >
                    {sending ? (
                      <Loader2 className="w-5 h-5 animate-spin" />
                    ) : (
                      <Send className="w-5 h-5" />
                    )}
                  </Button>
                </div>
              </div>
            </Card>
          </div>

          {/* Suggestions Panel */}
          <div className="space-y-6">
            <Card className="glassmorphism border-white/10">
              <CardHeader>
                <CardTitle className="text-white flex items-center gap-2 text-lg">
                  <Lightbulb className="w-5 h-5 text-yellow-400" />
                  Suggested Tasks
                </CardTitle>
              </CardHeader>
              <CardContent className="space-y-3">
                {chatSession?.suggested_tasks?.length > 0 ? (
                  chatSession.suggested_tasks.map((task, idx) => (
                    <motion.div
                      key={idx}
                      initial={{ opacity: 0, x: 20 }}
                      animate={{ opacity: 1, x: 0 }}
                      transition={{ delay: idx * 0.1 }}
                      className="glassmorphism p-3 rounded-lg hover-glow cursor-pointer"
                      onClick={() => setMessage(task)}
                    >
                      <p className="text-sm text-gray-300">{task}</p>
                    </motion.div>
                  ))
                ) : (
                  <p className="text-sm text-gray-500 text-center py-4">
                    Suggestions will appear after chatting
                  </p>
                )}
              </CardContent>
            </Card>

            <Card className="glassmorphism border-white/10">
              <CardHeader>
                <CardTitle className="text-white flex items-center gap-2 text-lg">
                  <BookOpen className="w-5 h-5 text-[#8A2BE2]" />
                  Quick Stats
                </CardTitle>
              </CardHeader>
              <CardContent className="space-y-3">
                <div className="flex justify-between items-center">
                  <span className="text-sm text-gray-400">Messages sent</span>
                  <span className="text-lg font-bold text-white">
                    {Math.floor((chatSession?.conversation_history?.length || 0) / 2)}
                  </span>
                </div>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </div>
  );
}
